  <script>
    function mostrarSeccion(seccion) {
      document.querySelectorAll('.section').forEach(s => s.style.display = 'none');
      document.getElementById(seccion).style.display = 'block';
    }

    document.addEventListener('DOMContentLoaded', function () {
      mostrarSeccion('info');
    });

    const frasesPaolo = [
      "¡Protege tus datos como proteges tu casa!",
      "¿Tu contraseña es 1234? ¡Cámbiala ya!",
      "Los hackers no duermen, ¡tú tampoco te confíes!",
      "¡Usa autenticación de dos pasos, por favor!",
      "Soy Paolo y me encanta ayudarte a estar seguro.",
      "¿Sabías que el 90% de los ataques vienen por correo?"
    ];

    function hablarPaolo() {
      const mensaje = document.getElementById("mensajePaolo");
      const frase = frasesPaolo[Math.floor(Math.random() * frasesPaolo.length)];
      mensaje.textContent = frase;
    }
  </script>
